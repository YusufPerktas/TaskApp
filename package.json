{
  "name": "mytask-app",
  "version": "1.0.0",
  "description": "Görev yönetim uygulaması",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "keywords": ["task", "todo", "electron"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.mytask.app",
    "productName": "MyTask",
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico",
      "sign": false
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron-store/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "extraMetadata": {
      "main": "main.js"
    }
  }
}
